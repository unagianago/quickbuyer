<header class="top-header">
  <div class="header-content">
    <div class="header-left">
      <h1 class="app-title"><%= link_to "Quick Buyer", root_path, class: 'no-underline' %></h1>
      <% if user_signed_in? %>
        <p class="welcome-message">ようこそ, <%= current_user.email %>さん</p>
      <% end %>
    </div>

    <div class="header-right">
      <% if user_signed_in? %>
        <% if controller_name == "dealers" || controller_name == "search" %>
        <p><%= link_to "お気に入りページはこちら", user_favorites_path(current_user.id) %></p>
        <% end %>

        <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete } %>
      <% else %>
        <%= link_to "新規登録", new_user_registration_path %>
        <%= link_to "ログイン", new_user_session_path %>
      <% end %>
    </div>
  </div>
</header>