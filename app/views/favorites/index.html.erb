<%= render "shared/header" %>

<h1>お気に入りリスト</h1>

<ul>
  <% @favorite_buyers.each do |buyer| %>
    <li>
      <%= buyer.name %>
      <%= turbo_frame_tag dom_id(buyer, :favorite) do %>
        <%= link_to '削除', user_favorite_by_buyer_path(current_user,buyer), data: {turbo_method: :delete} %>
      <% end %>
    </li>
  <% end %>
</ul>